<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.taitsmith.teatime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/teacup"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RegionActivity" />
        <activity android:name=".activities.TypeActivity" />
        <activity android:name=".activities.TeaActivity" />
        <activity android:name=".activities.TeaListActivity" />


            
        
    </application>

</manifest>